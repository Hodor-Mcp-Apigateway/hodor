{
  "$schema": "http://json.schemastore.org/template",
  "author": "PTech",
  "classifications": [ "C#", "Linux", "MacOS", "Windows", "Cloud", "Service", "Web" ],
  "name": "PTech Backend Microservice",
  "defaultName": "PapelTemplate",
  "description": "A project template for creating an ASP.NET Core microservice with clean architecture.",
  "identity": "Papel.Integration",
  "groupIdentity": "Papel.Integration",
  "shortName": "papel-template",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Papel.Integration",
  "preferNameDirectory": true,
  "symbols": {
    "EnableRest": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "displayName": "Enable REST API",
      "description": "Include REST API with controllers and Scalar documentation. If disabled, the application runs as a console worker with Wolverine."
    },
    "EnableGraphQL": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false",
      "displayName": "Enable GraphQL API",
      "description": "Include HotChocolate GraphQL API."
    },
    "EnableGrpc": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false",
      "displayName": "Enable gRPC API",
      "description": "Include gRPC services with protobuf-net."
    },
    "EnableSignalR": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false",
      "displayName": "Enable SignalR",
      "description": "Include SignalR real-time communication."
    },
    "EnableKafka": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false",
      "displayName": "Enable Kafka",
      "description": "Include Wolverine with Kafka message broker."
    },
    "EnableRedisCache": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false",
      "displayName": "Enable Redis Cache",
      "description": "Include EF Core second-level caching with Redis."
    },
    "EnableTests": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "displayName": "Include Test Projects",
      "description": "Include unit and integration test projects."
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**",
        ".vs/**",
        ".git/**",
        ".idea/**",
        "**/bin/**",
        "**/obj/**",
        "**/logs/**",
        "**/*.log"
      ],
      "modifiers": [
        {
          "condition": "(!EnableRest)",
          "exclude": [
            "src/Papel.Integration.Presentation.Rest/**"
          ]
        },
        {
          "condition": "(!EnableGraphQL)",
          "exclude": [
            "src/Papel.Integration.Presentation.GraphQL/**"
          ]
        },
        {
          "condition": "(!EnableGrpc)",
          "exclude": [
            "src/Papel.Integration.Presentation.Grpc/**"
          ]
        },
        {
          "condition": "(!EnableSignalR)",
          "exclude": [
            "src/Papel.Integration.Presentation.SignalR/**"
          ]
        },
        {
          "condition": "(!EnableKafka)",
          "exclude": [
            "src/Papel.Integration.MessageBrokers.Kafka/**"
          ]
        },
        {
          "condition": "(!EnableRedisCache)",
          "exclude": [
            "src/Papel.Integration.EFCore.Caching.Redis/**"
          ]
        },
        {
          "condition": "(!EnableTests)",
          "exclude": [
            "tests/**"
          ]
        },
        {
          "condition": "(EnableTests && !EnableRest)",
          "exclude": [
            "tests/Papel.Integration.Presentation.Rest.Tests/**"
          ]
        },
        {
          "condition": "(EnableTests && !EnableGraphQL)",
          "exclude": [
            "tests/Papel.Integration.Presentation.GraphQL.Tests/**"
          ]
        },
        {
          "condition": "(EnableTests && !EnableGrpc)",
          "exclude": [
            "tests/Papel.Integration.Presentation.Grpc.Tests/**"
          ]
        },
        {
          "condition": "(EnableTests && !EnableSignalR)",
          "exclude": [
            "tests/Papel.Integration.Presentation.SignalR.Tests/**"
          ]
        }
      ]
    }
  ],
  "SpecialCustomOperations": {
    "**/*.cs": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": ["//#if"],
            "else": ["//#else"],
            "elseif": ["//#elseif", "//#elif"],
            "endif": ["//#endif"],
            "trim": "true",
            "wholeLine": "true"
          }
        }
      ]
    },
    "**/*.csproj": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": ["<!--#if"],
            "else": ["<!--#else"],
            "elseif": ["<!--#elseif", "<!--#elif"],
            "endif": ["<!--#endif"],
            "actionableIf": ["<!--#if"],
            "actionableElse": ["<!--#else"],
            "actionableElseif": ["<!--#elseif"],
            "actions": ["uncomment"],
            "trim": "true",
            "wholeLine": "true"
          }
        }
      ]
    },
    "**/*.slnx": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": ["<!--#if"],
            "else": ["<!--#else"],
            "elseif": ["<!--#elseif", "<!--#elif"],
            "endif": ["<!--#endif"],
            "trim": "true",
            "wholeLine": "true"
          }
        }
      ]
    }
  },
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "dotnet",
        "args": "restore"
      },
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "continueOnError": true,
      "description": "Restore NuGet packages"
    }
  ]
}
